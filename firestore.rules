rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /usernames/{userID} {
      allow read, write: if request.auth != null;
      allow delete: if false;
    }
    match /rooms/{roomID} {
      allow read : if resource.data.owner == request.auth.token.name  || request.auth.token.name in resource.data.members || resource.data.prop == 'public' ; 
      allow create: if request.auth != null;
      allow update: if resource.data.owner == request.auth.token.name || request.auth.token.name in resource.data.members;
    }
  }
}